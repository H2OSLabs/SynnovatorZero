# Synnovator Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Authentication
# =============================================================================

# Mock authentication mode (default: true)
# - true: Development mode, uses X-User-Id header or auto-creates mock user
# - false: Production mode, requires real OAuth/JWT authentication
MOCK_AUTH=true

# Default mock user settings (only used when MOCK_AUTH=true)
MOCK_USER_ID=1
MOCK_USER_ROLE=participant  # participant, organizer, or admin

# =============================================================================
# Database
# =============================================================================

# SQLite database path (relative to project root)
DATABASE_URL=sqlite:///./data/synnovator.db

# =============================================================================
# API
# =============================================================================

# API prefix for all routes
API_PREFIX=/api

# Frontend API base URL (used by Next.js at build time)
# - Deploy: /api (requests go through nginx proxy)
# - Local dev: http://localhost:8000/api (direct to backend)
NEXT_PUBLIC_API_URL=/api

# =============================================================================
# CORS
# =============================================================================

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Future: OAuth Configuration (when MOCK_AUTH=false)
# =============================================================================

# OAuth provider settings (not implemented yet)
# OAUTH_PROVIDER=oneauth
# OAUTH_CLIENT_ID=your_client_id
# OAUTH_CLIENT_SECRET=your_client_secret
# OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
