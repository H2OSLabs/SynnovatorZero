{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../frontend/*"]
    }
  },
  "include": [
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "stories/**/*.mdx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "../frontend/components/**/*.ts",
    "../frontend/components/**/*.tsx",
    "../frontend/utils/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
